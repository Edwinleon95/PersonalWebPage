---
import Badge from "../components/Badge.astro";
import LinkedInIcon from "../components/icons/LinkedInIcon.astro";
import EmailIcon from "../components/icons/EmailIcon.astro";
import SocialPill from "../components/SocialPill.astro";
---

<div class="max-w-xl">
    <div class="flex gap-4 mb-4">
        <img
            class="rounded-full shadow-lg size-16"
            src="./public/profilePicture.png"
            alt="Edwin Profile Picture"
        />
        <a
            href="https://www.linkedin.com/in/edwinleonb/"
            target="_blank"
            rel="noopener"
            class="flex items-center transition md:justify-center md:hover:scale-105"
        >
            <Badge>Open To Work</Badge>
        </a>
    </div>
    <h1
        class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white"
    >
        Hi, I'm Edwin Leon
    </h1>
    <p
        class="mt-6 text-xl text-gray-800 dark:[&>strong]:text-yellow-200 [&>strong]:text-yellow-500 [&>strong]:font-semibold dark:text-gray-300"
    >
        <strong
            >Full Stack Software Developer with over 2 years of experience,</strong
        > I specialise in creating modern websites and web apps that deliver excellent
        user experiences.
    </p>

    <nav class="flex flex-wrap gap-4 mt-8">
        <SocialPill href="mailto:edwinm.leonb@gmail.com">
            <EmailIcon class="size-4" />
            Contact Me
        </SocialPill>
        <SocialPill href="https://www.linkedin.com/in/edwinleonb/">
            <LinkedInIcon class="size-4" />
            LinkedIn
        </SocialPill>
    </nav>
</div>
