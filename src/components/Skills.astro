---
import { TODAS_TECNOLOGIAS, TECNOLOGIAS_ICONOS } from "../consts";
import SkillPopUp from "./SkillPopUp.astro";
---

<article class="pt-12">
    <ul class=" flex flex-wrap justify-center gap-5 px-0 py-0">
        {
            TODAS_TECNOLOGIAS.map((tecnologia) => {
                const Icon = TECNOLOGIAS_ICONOS[tecnologia.icono];

                return (
                    <li
                        id={tecnologia.nombre}
                        class="icon-container text-black"
                        style={{ "--background-dif": tecnologia.color }}
                    >
                        <Icon class="icon" width="50" height="50" />
                        <span class="tooltip"> {tecnologia.nombre} </span>
                    </li>
                );
            })
        }
    </ul>
</article>

